{
  "name": "hardhat-diamond-tools",
  "version": "0.1.0",
  "description": "A rust bindings for Hardhat",
  "main": "index.js",
  "scripts": {
    "build": "wasm-pack build -t nodejs -m normal && sh ./scripts/after-build.sh",
    "release": "wasm-pack build -t nodejs -m normal --release . -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort && sh ./scripts/after-build.sh"
  },
  "devDependencies": {
    "@wasm-tool/wasm-pack-plugin": "1.0.1",
    "text-encoding": "^0.7.0",
    "ts-node": "^8.1.0",
    "typescript": "~4.5.2"
  },
  "dependencies": {
    "hardhat": "^2.17.0"
  },
  "peerDependencies": {
    "hardhat": "^2.17.0"
  }
}